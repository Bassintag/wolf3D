#include "wolf.h"

void	update_pickup_dog_food(t_object *pickup, t_map *map)
{
  int	tx;
  int	ty;

  tx = TXPOS((*pickup));
  ty = TYPOS((*pickup));
  if (TXPOS(map->player) == tx && TYPOS(map->player) == ty)
    {
      player_update_health(&map->player, 5);
      object_delete(pickup, map);
      map->flash = 5;
    }
}
